#
# {{cookiecutter.project_name}}/sphinx/Makefile ---
#

SHELL:=bash
.SUFFIXES:

_default: _docs_all

# Please upgrade Sphinx to at least Sphinx==1.8.1
# Didn't include in default VE as we don't always build the docs.
_docs_pip_install:
	pip install sphinx recommonmark

_docs_autogen:
	cd ${SOURCEDIR} && sphinx-autogen index.rst

#
swdocs_host:=sw-docs.healthtell.io
swdocs_path:=/var/www/sw-docs.healthtell.io/{{cookiecutter.project_name}}
swdocs_user:=jenkins

_docs_rsync_to_swdocs:
	rsync -Fa \
	  --omit-dir-times \
	  --delete-during \
	  build/html/ \
	  ${swdocs_user}@${swdocs_host}:${swdocs_path}/

# sometimes you get an error about ownership.
_docs_swdocs_chown:
	ssh ${swdocs_user}@${swdocs_host} sudo chown -R '${swdocs_user}' ${swdocs_path}

_docs_all+=_docs_autogen
_docs_all+=html
# Dont push to sw-docs by default
# _docs_all+=_docs_rsync_to_swdocs

_docs_all: ${_docs_all}

_docs_open:
	open build/html/index.html

#####
#
# The autogenerated makefile.
#

# You can set these variables from the command line.
SPHINXOPTS    =
SPHINXBUILD   = sphinx-build
SPHINXPROJ    = {{'${'}}{{cookiecutter.PROJECT_NAME}}_VE_DIR{{'}'}}/bin/sphinx-build
SOURCEDIR     = ./source
BUILDDIR      = ./build

# Put it first so that "make" without argument is like "make help".
help:
	@$(SPHINXBUILD) -M help "$(SOURCEDIR)" "$(BUILDDIR)" $(SPHINXOPTS) $(O)

.PHONY: help Makefile

# Catch-all target: route all unknown targets to Sphinx using the new
# "make mode" option.  $(O) is meant as a shortcut for $(SPHINXOPTS).
#%: Makefile
html:
	export PATH=${{'{'}}{{cookiecutter.project_name}}{{'}'}}:/bin:${PATH} ; \
	$(SPHINXBUILD) -M $@ "$(SOURCEDIR)" "$(BUILDDIR)" $(SPHINXOPTS) $(O)

.PHONY: clean
clean:
	rm -rf $(BUILDDIR)/*